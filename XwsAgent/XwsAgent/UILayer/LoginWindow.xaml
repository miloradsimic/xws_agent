<Window x:Class="XwsAgent.UILayer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XwsAgent.UILayer"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10">Email:</TextBlock>
        <TextBox Grid.Row="1" Text="{Binding Email}"></TextBox>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10">Password:</TextBlock>
        <PasswordBox Name="passwordBox" Grid.Row="3"></PasswordBox>
        <Button Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click">Login</Button>
    </Grid>
</Window>
